@model Course
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-left:300px;margin-top:100px">
    <label>Course Images</label>
    <div class="form-group">
        @foreach (var item in Model.Images)
        {
                <img style="width:150px;height:150px" src="~/images/@item.Image" />
        }
    </div>
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" disabled id="customFile" asp-for="CourseName" />
        <span class="text-danger" asp-validation-for="CourseName"></span><br />
    </div>
    <div class="form-group">
        <label>Description</label>
        <input class="form-control" disabled id="description-text" value="@ViewBag.desc" />
        <span class="text-danger" asp-validation-for="CourseDescribtion"></span><br />
    </div>
    <div class="form-group">
        <label>Price</label>
        <input type="number" type="text" class="form-control" disabled id="customFile" asp-for="Sale" />
        <span class="text-danger" asp-validation-for="Sale"></span>
    </div>
    <div class="form-group">
        <label>Count</label>
        <input type="number" class="form-control" disabled id="customFile" asp-for="Price" />
        <span class="text-danger" asp-validation-for="Price"></span><br />
    </div>
    <label>Category</label>
    <input class="form-control" disabled id="customFile" asp-for="CourseHost.HostName" /><br />
    <label>Host Image</label>
    <div class="form-group">
        <img style="width:150px;height:150px" src="~/images/@Model.CourseHost.HostImage" />
    </div>


    <div class="form-group">
        <div class="buttons my-3">
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </div>
</div>


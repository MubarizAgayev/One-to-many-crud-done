@model IEnumerable<Course>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-left:300px;margin-top:100px">
    <a class="btn btn-success text-white" asp-action="Create" style="float:right">Create</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Sale</th>
                <th scope="col">Price</th>
                <th scope="col">HostName</th>
                <th scope="col">HostImage</th>
                <th scope="col">Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <th><img src="~/images/@course.Images.FirstOrDefault().Image" style="width:100px;height:70px" /></th>
                    <td>
                        @course.CourseName
                    </td>
                    <td>
                        @course.CourseDescribtion
                    </td>
                    <td>
                        @course.Sale
                    </td>
                    <td>
                        @course.Price
                    </td>
                    <td>
                        @course.CourseHost.HostName
                    </td>
                    <td>
                        <img src="~/images/@course.CourseHost.HostImage" style="width:70px;height:70px" />
                    </td>
                    <td>
                        <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@course.Id">Info</a>
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@course.Id">Edit</a>
                        <form style="display:inline-block;" asp-action="Delete" asp-route-id="@course.Id" method="post">
                            <button type="submit" class="btn btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



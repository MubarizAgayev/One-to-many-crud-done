@model CourseCreateVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-left:300px;margin-top:100px">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" id="customFile" asp-for="CourseName" />
            <span class="text-danger" asp-validation-for="CourseName"></span><br />
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea class="form-control" id="description-text" rows="5" asp-for="CourseDescribtion"></textarea>
            <span class="text-danger" asp-validation-for="CourseDescribtion"></span><br />
        </div>
        <div class="form-group">
            <label>Sale</label>
            <input type="number" step=".01" class="form-control" id="customFile" asp-for="Sale" />
            <span class="text-danger" asp-validation-for="Sale"></span><br />
        </div>
        <div class="form-group">
            <label>Price</label>
            <input class="form-control" id="customFile" asp-for="Price" />
            <span class="text-danger" asp-validation-for="Price"></span><br />
        </div>
        <label>Category</label>
        <select class="form-control" id="customFile" asp-for="CourseHostId" asp-items="@ViewBag.hosts"></select><br />
        <div class="form-group">
            <label>Images</label>
            <input class="form-control" id="customFile" asp-for="Photos" />
            <span class="text-danger" asp-validation-for="Photos"></span>
        </div>
        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("description-text");
    </script>
}

